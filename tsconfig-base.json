{
	// TSConfig reference: https://www.typescriptlang.org/tsconfig
	// Configured based on https://stackoverflow.com/a/72380008
	"compilerOptions": {
		// Type checking options
		"strict": true,
		// Modules options
		"module": "CommonJS",
		// Emit options
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"sourceMap": true,
		// Interop constraints options
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		// Language and environment options
		"lib": [ "ES2022" ],
		"target": "ES2022",
		// Completeness options
		"skipLibCheck": true
	}
}
