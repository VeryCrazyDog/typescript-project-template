{
	// TSConfig reference: https://www.typescriptlang.org/tsconfig
	// Configured based on https://stackoverflow.com/a/61305579/1131246
	"compilerOptions": {
		// Strict checks
		"strict": true,
		// Project options
		"declaration": true,
		"lib": [ "ES2020" ],
		"module": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"target": "ES2020",
		// Module resolution
		"esModuleInterop": true,
		"moduleResolution": "Node",
		// Advanced
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
